<h2>

	{% if authors is empty or authors is not defined %}
		<h3>Aucun auteur trouvé</h3>
	{% else %}
		<div>
			<h3>Liste des auteurs depuis la base de données</h3>
			<table border="1" style="border-collapse: collapse; width: 100%;">
				<thead>
					<tr>
						<th>ID</th>
						<th>Nom d'utilisateur</th>
						<th>Email</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for author in authors %}
						<tr>
							<td>{{ author.id }}</td>
							<td>{{ author.username | upper }}</td>
							<td>{{ author.email }}</td>
							<td>
								<a href="{{ path('author_detail', {'id': author.id}) }}">Détails</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<p><strong>Total :</strong> {{ authors | length }} auteur(s) enregistré(s)</p>
		</div>
	{% endif %}
