{% extends 'base.html.twig' %}
{% block title %}Book Details{% endblock %}
{% block body %}
<div class="container">
    <h1>Book Details</h1>
    <ul>
        <li><strong>ID:</strong> {{ book.id }}</li>
        <li><strong>Title:</strong> {{ book.title }}</li>
        <li><strong>Author:</strong> {{ book.author ? book.author.username : '-' }}</li>
        <li><strong>Category:</strong> {{ book.category }}</li>
        <li><strong>Published:</strong> {{ book.published ? 'Yes' : 'No' }}</li>
    </ul>
    <a href="{{ path('book_index') }}" class="btn btn-secondary">Back</a>
</div>
{% endblock %}
